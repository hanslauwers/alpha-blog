<h1 align="center">Create a new category</h1>

<%= render 'shared/errors', obj: @category %>
<div class="row">
  <div class="col-md-12 form-container">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-md-2 control-label form-label-container">
          <%= f.label :name %>
        </div>
        <div class="col-md-8 form-input-container">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8 offset-md-2">
          <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-8 offset-md-4">
      [ <%= link_to 'Cancel request and return to article overview', articles_path %> ]
    </div>
  </div>
</div>