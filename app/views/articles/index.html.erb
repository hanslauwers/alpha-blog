<h1 align="center">Listing all articles</h1>

<% @articles.each do |art| %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-title article-title">
          <%= link_to art.title, article_path(art) %>
        </div>
        <div class="card-text article-body">
          <%= truncate(art.description, length: 150) %>
          <div class="article-meta-details">
            <small>
              Created by: <%= art.user.username if art.user %>, <%= time_ago_in_words(art.created_at) %> ago,
              last updated: <%= time_ago_in_words(art.updated_at) %> ago
            </small>
          </div>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(art), class: "btn btn-md btn-primary" %>
          <%= link_to "Delete this article", article_path(art), method: :delete,
                  data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-md btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>